<head>
    <link rel="stylesheet" type="text/css" href='/stylesheets/style.css'>
</head>
{{#if errors}}
    {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
    {{/each}}
{{/if}}
<div class="container">
    <div class="row">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3 offset-md-3">
            <form method="POST" action="/createGame">

                <h2>Create New Game</h2>
                <hr class="colorgraph">

                <!-- game name text field-->
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-12">
                        <div class="form-group">
                            <input type="text" name="gameName" id="gameName" class="form-control input-lg"
                                   placeholder="Game Name" tabindex="1">
                        </div>
                    </div>
                </div>

                <!-- number of players button group -->
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <h5 style="padding-top:10px">Number of Players</h5>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <div data-toggle="buttons">
                            <label class="btn btn-primary btn-lg active">
                                <input type="radio" name="maxPlayers" id="two-player" value="2" checked>2
                            </label>
                            <label class="btn btn-primary btn-lg">
                                <input type="radio" name="maxPlayers" id="three-player" value="3">3
                            </label>
                            <label class="btn btn-primary btn-lg">
                                <input type="radio" name="maxPlayers" id="four-player" value="4">4
                            </label>
                        </div>
                    </div>
                </div>

                <!-- starting bankroll slider -->
                <div class="row">
                    <div class="col-xs-3 col-sm-3 col-md-3">
                        <h5 style="padding-top:10px">Starting Bankroll</h5>
                    </div>
                    <div class="col-xs-3 col-sm-3 col-md-3">
                        <h5 style="padding-top:10px">$<span id="bankroll-value"></span></h5>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6" style="padding-top:15px">
                        <input type="range" min="1000" max="3000" step="100" value="2000" class="slider" name="bankroll"
                               id="bankroll" list="tickmarks">
                    </div>
                </div>

                <hr class="colorgraph">
                <!-- cancel and submit buttons -->
                <div class="row">
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button type="submit" class="btn btn-lg btn-danger btn-block" formaction="/createGame">Cancel
                        </button>
                    </div>
                    <div class="col-xs-6 col-sm-6 col-md-6">
                        <button type="submit" class="btn btn-lg btn-primary btn-block" formaction="/createGame/create">
                            Create
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
<script src="/javascripts/myJSfile.js"></script>
